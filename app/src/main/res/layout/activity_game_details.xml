<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entertainment.GameDetailsActivity">

    <TextView
        android:id="@+id/gameDetailedTitle"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/design_default_color_secondary"/>

    <TextView
        android:id="@+id/gameDetailedDescriptionTxt"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gameDetailedTitle"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:text="@string/description"
        android:fontFamily="@font/aclonica"/>

    <TextView
        android:id="@+id/gameDetailedDescription"
        android:textSize="15sp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gameDetailedDescriptionTxt"
        android:layout_marginTop="10sp"
        android:layout_centerVertical="true"
        android:singleLine="false" />

    <TextView
        android:id="@+id/whereToBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/where_to_get"
        android:layout_below="@id/gameDetailedDescription"
        android:fontFamily="@font/aclonica"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/gameLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whereToBuy"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/design_default_color_secondary"
        android:autoLink="web"/>


</RelativeLayout>