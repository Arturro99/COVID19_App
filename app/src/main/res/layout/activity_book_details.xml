<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".entertainment.FilmDetailsActivity">


            <RatingBar
                android:id="@+id/bookRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookDetailedTitle"
                android:layout_centerHorizontal="true"
                android:isIndicator="true"
                android:numStars="5" />

            <TextView
                android:id="@+id/bookDetailedTitle"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookRatingBar"
                android:layout_toStartOf="@id/bookDetailedRatingsCount"
                android:text="@string/num_of_votes" />

            <TextView
                android:id="@+id/bookDetailedRatingsCount"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookRatingBar"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/bookDetailedDescriptionTxt"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookDetailedRatingsCount"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:text="@string/description" />

            <TextView
                android:id="@+id/bookDetailedDescription"
                android:textSize="15sp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookDetailedDescriptionTxt"
                android:layout_marginTop="10sp"
                android:layout_centerVertical="true"
                android:singleLine="false" />

            <TextView
                android:id="@+id/pdfAvailableTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookRatingBar"
                android:text="@string/pdf"/>

            <TextView
                android:id="@+id/pdfAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookRatingBar"
                android:layout_toEndOf="@id/pdfAvailableTxt"
                android:layout_marginStart="5dp" />


        </RelativeLayout>
    <!--</ScrollView>-->