<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //shoulders
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy boli Cię ramie?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/backgroundShoulder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no">

                    <Button
                        android:id="@+id/buttonFormShouldersYes"

                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/green_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormShouldersNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            //Back
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy bolą Cię plecy?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/backgroundBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no">
                    <Button
                        android:id="@+id/buttonFormBackYes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormBackNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            //Wrists
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy bolą Cię nadgarstki?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/backgroundWrist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no"
                    >

                    <Button
                        android:id="@+id/buttonFormWristsYes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormWristsNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            //Knees
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy bolą Cię kolana?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/backgroundKnees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no">

                    <Button
                        android:id="@+id/buttonFormKneesYes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormKneesNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            //Elbows
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy bolą Cię łokcie?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/backgroundElbows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no"
                    >

                    <Button
                        android:id="@+id/buttonFormElbowYes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormElbowNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            //Hips
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Czy bolą Cię biodra?"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/backgroundHips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:background="@drawable/outline_button_no"
                    >

                    <Button
                        android:id="@+id/buttonFormHipYes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_yes_btn"
                        android:text="@string/yes"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonFormHipNo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/red_no_btn"
                        android:text="@string/no"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            // target weight
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Docelowa waga [kg]:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/targetWeightText"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            // steps per day
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Docelowa dzienna ilość kroków:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/targetStepsText"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            // steps per day
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Docelowa dzienna ilość spożytej wody [ml]:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/targetWaterText"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/saveBtnFormHealth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/save" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>