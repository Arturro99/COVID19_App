<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/enableNotiExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Enable notifications \n exercises"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/exerGroupNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="setNotiExer,setTimeExercBtn"
        tools:visibility="visible" />

    <Switch
        android:id="@+id/enableNotiWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Enable notifications \n water"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/waterGroupNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="setWaterNoti,setTimeWaterBtn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/setTimeWaterBtn"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/choose_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enableNotiWater" />

    <Button
        android:id="@+id/setNotiExer"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/set_btn_for_add_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setTimeExercBtn"
        app:layout_constraintVertical_bias="0.156" />

    <Button
        android:id="@+id/setTimeExercBtn"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="44dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/choose_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enableNotiExercises" />

    <Button
        android:id="@+id/setWaterNoti"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/set_btn_for_add_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setTimeWaterBtn"
        app:layout_constraintVertical_bias="0.063" />

</androidx.constraintlayout.widget.ConstraintLayout>